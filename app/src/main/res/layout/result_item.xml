<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <LinearLayout
        android:weightSum="10.8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="@dimen/text_size"
            android:paddingVertical="@dimen/column_distance"
            android:background="@color/cyan"
            android:gravity="center"
            android:maxLines="1"
            android:layout_weight="0.9"
            android:text="2000"
            android:id="@+id/tvYear"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_weight="0.9"
            android:maxLines="1"
            android:text="2000"
            android:paddingVertical="@dimen/column_distance"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_color"
            android:layout_width="0dp"
            android:id="@+id/tvVolume"
            android:layout_height="wrap_content" />


        <TextView
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_color"
            android:layout_weight="1"
            android:text="2000"
            android:paddingVertical="@dimen/column_distance"
            android:id="@+id/tvCashIn"
            android:maxLines="1"
            android:background="@color/cyan"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvCapex"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:maxLines="1"
            android:paddingVertical="@dimen/column_distance"
            android:textColor="@color/text_color"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRoyalty"
            android:gravity="center"
            android:paddingVertical="@dimen/column_distance"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:background="@color/cyan"
            android:layout_weight="1"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvOpex"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:text="2000"
            android:paddingVertical="@dimen/column_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDepr"
            android:gravity="center"
            android:paddingVertical="@dimen/column_distance"
            android:maxLines="1"
            android:background="@color/cyan"
            android:layout_weight="1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/text_size"
            android:id="@+id/tvTax"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:paddingVertical="@dimen/column_distance"
            android:gravity="center"
            android:layout_weight="1"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDiscount"
            android:maxLines="1"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:background="@color/cyan"
            android:paddingVertical="@dimen/column_distance"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCashSD"
            android:gravity="center"
            android:maxLines="1"
            android:paddingVertical="@dimen/column_distance"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_color"
            android:layout_weight="1"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCashSdPV"
            android:maxLines="1"
            android:paddingVertical="@dimen/column_distance"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/purple_700"
            android:layout_weight="1"
            android:text="2000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>